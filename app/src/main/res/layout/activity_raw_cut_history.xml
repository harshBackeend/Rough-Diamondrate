<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".uiComponents.activity.RawCutHistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/SingleTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:hint="@string/search">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:theme="@style/textViewAndEditText"
                tools:ignore="VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/enterDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/enter_the_new_cut"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            tools:ignore="RelativeOverlap,VisualLintButtonSize" />

    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="VisualLintBounds">

            <include layout="@layout/horizontal_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/date"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/main_kat_no"
                    android:theme="@style/textViewForTableLayout"
                    tools:ignore="TextSizeCheck" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/no"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/kat_name"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/maine_weight"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/bag"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/weight"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/price"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/dollar_price"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/brokerage_price"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/india_rs_symbol"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/total_price"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/number_weight"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/number_price"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/number_percentage"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/number_rate"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/final_price"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/detail"
                    android:theme="@style/textViewForTableLayout" />

                <include layout="@layout/vertical_view" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:text="@string/month"
                    android:theme="@style/textViewForTableLayout" />


            </LinearLayout>

            <include layout="@layout/horizontal_view" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPartyHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/list_of_raw_cut_history" />


        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>