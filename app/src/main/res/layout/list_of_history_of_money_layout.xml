<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal">

        <include layout="@layout/vertical_view" />


        <TextView
            android:id="@+id/dateText"
            style="@style/textViewForTableLayout"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            tools:text="20-25-2022" />

        <include layout="@layout/vertical_view" />

        <TextView
            android:id="@+id/partyName"
            style="@style/textViewForTableLayout"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            tools:text="25" />

        <include layout="@layout/vertical_view" />

        <TextView
            android:id="@+id/depositText"
            style="@style/textViewForTableLayout"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            tools:text="25" />

        <include layout="@layout/vertical_view" />

        <TextView
            android:id="@+id/depositNumberText"
            style="@style/textViewForTableLayout"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            tools:text="25" />

        <include layout="@layout/vertical_view" />

        <TextView
            android:id="@+id/creditText"
            style="@style/textViewForTableLayout"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            tools:text="25"
            tools:ignore="VisualLintBounds" />

        <include layout="@layout/vertical_view"
            tools:ignore="VisualLintBounds" />

        <TextView
            android:id="@+id/creditNumberText"
            style="@style/textViewForTableLayout"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            tools:text="25"
            tools:ignore="VisualLintBounds" />

        <include layout="@layout/vertical_view"
            tools:ignore="VisualLintBounds" />

        <TextView
            android:id="@+id/detailText"
            style="@style/textViewForTableLayout"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            android:maxLines="2"
            tools:text="harsh"
            tools:ignore="VisualLintBounds" />

        <include layout="@layout/vertical_view"
            tools:ignore="VisualLintBounds" />


    </LinearLayout>

    <include layout="@layout/horizontal_view" />

</LinearLayout>